{
    "name": "API User Rights",
    "namespace": "YaleREDCap\\ApiUserRights",
    "description": "This external module allows users with User Rights permission in a project to control access to individual API methods. For example, you can allow a user to access the <code>Export Reports</code> method, but not the <code>Import Records</code> endpoint.",
    "authors": [
        {
            "name": "Andrew Poppe",
            "email": "andrew.poppe@yale.edu",
            "institution": "Yale Center for Clinical Investigation"
        }
    ],
    "system-settings": [],
    "links": {
        "project": [
            {
                "name": "API User Rights",
                "url": "api_user_rights",
                "icon": "fas fa-laptop-code",
                "show-header-and-footer": true
            }
        ]
    },
    "no-auth-pages": [],
    "auth-ajax-actions": [
        "getApiUserRights",
        "saveApiUserRights"
    ],
    "framework-version": 12,
    "compatibility": {
        "php-version-min": "7.4.0",
        "php-version-max": "",
        "redcap-version-min": "13.1.27",
        "redcap-version-max": ""
    },
    "enable-no-auth-logging": true,
    "enable-every-page-hooks-on-system-pages": true
}